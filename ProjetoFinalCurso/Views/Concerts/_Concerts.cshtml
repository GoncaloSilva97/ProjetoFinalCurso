@model ProjetoFinalCurso.Models.ConcertViewModel

<div class="form-group">
    <label asp-for="Title" class="control-label" style="font-size: 1.6rem;"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Description" class="control-label" style="font-size: 1.6rem;"></label>
    <input asp-for="Description" class="form-control" />
    <span asp-validation-for="Description" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Day" class="control-label" style="font-size: 1.6rem; color: white;"></label>
    <input asp-for="Day" style="color-scheme: dark;" class=" form-control" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")   />
    <span asp-validation-for="Day" class="text-danger"></span>
</div>






<div class="form-group">
    <label asp-for="EstablishmentId" class="control-label" style="font-size: 1.6rem;"></label>
    <select asp-for="EstablishmentId" asp-items="Model.ListEstablishments" class="form-control footer-first-section" style=" color: white; background-color: black; font-size: 1.4rem;border: 1px solid #fff;border-radius: 5px"></select>
    <span asp-validation-for="EstablishmentId" class="text-danger"></span>
</div>











<div class="form-group">
    <label asp-for="ImageFile" class="control-label" style="font-size: 1.6rem;"></label>
    <input asp-for="ImageFile" class="form-control-image" type="file" />
    <span asp-validation-for="ImageFile" class="text-danger"></span>
</div>
