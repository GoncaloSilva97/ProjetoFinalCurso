@model ProjetoFinalCurso.Models.Login.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<section class="footer-first-section">
    <div class="login" @*class="container"*@ @*style="position:center"*@>


        <div class="box-wrap">
            <header>
                <h1>Recover Password</h1>
            </header>



            <section class="quick-contact">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Email" style="font-size: 1.6rem;">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Recover password" class="btn" />
                        <p></p>
                        <a asp-action="Login" class="btn-login">Back to login</a>
                    </div>
                </form>
                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>

            </section>
        </div>

    </div>

    <br/>
    <br />
    <br />
    <br />
    <br />
    <br />
  
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }