@model ProjetoFinalCurso.Models.Login.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<body>
    
    <section class="footer-first-section">
        <div class="login" @*class="container"*@ style="position:center">


            <div class="box-wrap">
                <header>
                    <h1>Login</h1>
                </header>



                <section class="quick-contact">


                    <form method="post">
                        <div asp-validation-summary="ModelOnly"></div>
                        <div class="form-group">
                            <label asp-for="Username" style="font-size: 1.6rem;">Username</label>
                            <input asp-for="Username" class="form-control" />
                            <span asp-validation-for="Username" class="text-warning"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Password" style="font-size: 1.6rem;">Password</label>
                            <input asp-for="Password" type="password" class="form-control" />
                            <span asp-validation-for="Password" class="text-warning"></span>
                        </div>

                        <div class="form-group">
                            <div class="form-check">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label">Remember Me?</label>
                            </div>
                            <span asp-validation-for="RememberMe" class="text-warning" style=" margin-top: 0rem; margin-left: 0rem;"></span>
                        </div>

                        
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn-login" />
                            <p></p>
                            <a asp-action="Register" class="btn-login">Register New User</a>
                            <p><a asp-action="RecoverPassword" class="btn btn-link">Forgot your password?</a></p>

                        </div>


                    </form>

                    <br />
                    <br />
                    <br />
                    <br />
                    <br />



                </section>
            </div>

        </div>
        </section>

    <script type="text/javascript" src="~/lib/bootstrap/dist/js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/lightbox.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/all.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/isotope.pkgd.min.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/owl.carousel.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/jquery.flexslider.js"></script>
    <script type="text/javascript" src="~/lib/bootstrap/dist/js/jquery.rateyo.js"></script>

    <script type="text/javascript" src="~/lib/bootstrap/dist/js/custom.js"></script>
</body>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
