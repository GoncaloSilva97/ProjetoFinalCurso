@model ProjetoFinalCurso.Models.Login.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<section class="footer-first-section">
    <div class="login" @*class="container"*@ style="position:center">

        <div class="box-wrap">
            <header>
                <h1>Reset Your Password</h1>
            </header>

            <section class="quick-contact">
                <form method="post">
                    <div asp-validation-summary="All"></div>
                    <input type="hidden" asp-for="Token" />

                    <div class="form-group">
                        <label asp-for="UserName" style="font-size: 1.6rem;">Email</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" style="font-size: 1.6rem;">New password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="ConfirmPassword" style="font-size: 1.6rem;">Confirm</label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-warning"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Reset password" class="btn btn-primary" />
                    </div>
                </form>

                <div class="text-success">
                    <p>
                        @ViewBag.Message
                    </p>
                </div>


            </section>
        </div>

    </div>



</section>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }